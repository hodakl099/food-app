<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/creme">


    <TextView
        android:id="@+id/ab_line1"
        android:layout_width="wrap_content"
        android:layout_height="104dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:background="@color/green_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignTop="@+id/ab_line1"
        android:layout_alignBottom="@+id/ab_line1"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="-8dp"
        android:layout_marginTop="38dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="44dp"
        android:layout_toRightOf="@id/ab_line1"
        android:fontFamily="@font/bebas"
        android:gravity="center"
        android:text="Made by Marwan"
        android:textColor="@color/green_dark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ab_logo"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:elevation="3dp"
        android:scaleType="fitCenter"
        android:src="@drawable/cat_burger" />

    <RelativeLayout
        android:id="@+id/ab_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:background="@drawable/bg_curve_up"
        android:backgroundTint="@color/green_dark"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/quicksand_book"
            android:text="By the Developer,\n\n\nI have made an Food Ordering App- EATMA.\n\nMade by using Andrioid Studio with Kotlin and XML.\n\nI Developed this app following google android developers documentation and best practices.\n\nThe designs in the App are made using Canva.\n\n\nThank You,\n\nMade with love by marwan"
            android:textColor="@color/creme"
            android:textSize="16sp"
            android:textStyle="bold" />Z

    </RelativeLayout>

</RelativeLayout>
